
* {
  box-sizing: border-box;
}

body,
html {
  min-height: 100%;
}

a {
  color: #424242;
  text-decoration: none;

  &:hover,
  &:active {
    text-decoration: underline;
  }
}


// Headings
// --------------------------------------------------

h1,
h2,
h3,
h4,
h5,
h6 {
  margin-top: 15px;
  margin-bottom: 15px;
  line-height: 1;
}

h1 { font-size: 30px; }
h2 { font-size: 21px; }
h3 { font-size: 16px; }
h4 { font-size: 14px; }
h5 { font-size: 12px; }
h6 { font-size: 11px; }

// Lists
// --------------------------------------------------

ul,
ol {
  padding: 0;
  margin-top: 0;
  margin-bottom: 0;
  list-style: none;
}

ol ol,
ul ol {
  list-style-type: none;
}

ul ul ol,
ul ol ol,
ol ul ol,
ol ol ol {
  list-style-type: none;
}

dd {
  margin-left: 0;
}

img{
  max-width: 100%;
  vertical-align: middle;
}
.material-icons {
  font-family: 'Material Icons'!important;
}
